<header class="main-header">
  <!-- Logo -->
  <a href="<%= root_url %>" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini">
      Inv</span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg">
      <b>Inventrio</b>
    </span>
  </a>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
  </nav>
</header>
<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag("user2-160x160.jpg", class: "img-circle") %>
      </div>
      <div class="pull-left info">
        <p><%= current_user.name %></p>
        <a href="<%= edit_user_path(current_user.id) %>">
          <i class="fa fa-edit"></i>
          Edit Profile</a>
        <a href="">
          <%= link_to destroy_user_session_path, method: :delete  do %>
          <i class="fa fa-sign-out"></i>Log Out
        <% end %>
        </a>
      </div>
    </div>
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu">
      <li class="header">MAIN NAVIGATION</li>
      <li>
        <a href="<%= root_url %>">
          <i class="fa fa-home"></i>
          <span>Home Page</span>
        </a>
      </li>
      <% if current_user.customer? %>
        <li>
          <a href="<%= reviews_path %>">
            <i class="fa fa-history"></i>
            <span>My Reviews</span>
          </a>
        </li>
      <% else %>
        <li>
          <a href="<%= products_path %>">
            <i class="fa fa-search"></i>
            <span>Check Inventory</span>
          </a>
        </li>
        <li>
          <a href="<%= past_orders_path %>">
            <i class="fa fa-history"></i>
            <span>Past Orders</span>
          </a>
        </li>
        <li>
          <a href=" <%= new_product_path %>">
            <i class="fa fa-plus"></i>
            <span>Add Product</span>
          </a>
        </li>
        <li>
          <a href="<%= new_supplier_path %>">
            <i class="fa fa-user-plus"></i>
            <span>Add Supplier</span>
          </a>
        </li>
        <li>
          <a href="<%= transactions_path %>">
            <i class="fa fa-history"></i>
            <span>Transactions</span>
          </a>
        </li>
      <% end %>
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>
